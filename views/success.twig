{% extends "partials/base.twig" %}
{% set title = "Success" %}
{% set navbarDisable = true %}

{% block content %}

<div class="row">
    <div class="col s12 m8 offset-m2 l4 offset-l4">
        <div class="card">
            <div class="card-action white accent-4 ">
                <h3>Email sent successfully!</h3>
                {% if redirect %}
                    <meta http-equiv="refresh" content="1; url={{ redirect }}">
                    <p class="flow-text">Redirecting...</p>
                {% else %}
                    <p class="flow-text">You can close this window</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
